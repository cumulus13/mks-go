package main

import (
	"fmt"
	"os"
	"path/filepath"
	"strings"

	"github.com/atotto/clipboard"
)

func normalizeTreeChars(s string) string {
	// Normalize various Unicode box-drawing chars to standard ASCII-like tree chars
	s = strings.ReplaceAll(s, string(rune(0x251C)), "├")
	s = strings.ReplaceAll(s, string(rune(0x2514)), "└")
	s = strings.ReplaceAll(s, string(rune(0x2500)), "─")
	s = strings.ReplaceAll(s, string(rune(0x2502)), "│")

	// Also handle common copy-paste corruptions (e.g., from VS Code, websites)
	s = strings.ReplaceAll(s, "├", "├")
	s = strings.ReplaceAll(s, "└", "└")
	s = strings.ReplaceAll(s, "─", "─")
	s = strings.ReplaceAll(s, "│", "│")

	// Replace any remaining fancy dashes with plain -
	s = strings.ReplaceAll(s, "–", "-") // en dash
	s = strings.ReplaceAll(s, "—", "-") // em dash

	return s
}

func isValidFileName(name string) bool {
	if name == "" || len(name) > 255 {
		return false
	}
	trimmed := strings.TrimSpace(name)
	if trimmed == "" {
		return false
	}
	upper := strings.ToUpper(trimmed)
	base := strings.Split(upper, ".")[0]
	reserved := []string{
		"CON", "PRN", "AUX", "NUL",
		"COM1", "COM2", "COM3", "COM4", "COM5", "COM6", "COM7", "COM8", "COM9",
		"LPT1", "LPT2", "LPT3", "LPT4", "LPT5", "LPT6", "LPT7", "LPT8", "LPT9",
	}
	for _, r := range reserved {
		if base == r {
			return false
		}
	}
	for _, c := range `<>:"/\|?*` {
		if strings.ContainsRune(name, c) {
			return false
		}
	}
	if strings.HasSuffix(trimmed, " ") || strings.HasSuffix(trimmed, ".") {
		return false
	}
	return true
}

func createStructure(lines []string) error {
	var currentPath []string

	for i, originalLine := range lines {
		trimmed := strings.TrimSpace(originalLine)
		if trimmed == "" {
			continue
		}

		if len(currentPath) == 0 && i == 0 && strings.HasSuffix(trimmed, "/") &&
			!strings.Contains(trimmed, "├──") &&
			!strings.Contains(trimmed, "└──") {

			rootName := strings.TrimSuffix(trimmed, "/")
			if !isValidFileName(rootName) {
				return fmt.Errorf("invalid root: %q", rootName)
			}
			if err := os.MkdirAll(rootName, 0755); err != nil {
				return err
			}
			currentPath = []string{rootName}
			continue
		}

		workLine := originalLine

		// Normalize first!
		workLine = normalizeTreeChars(workLine)

		// Strip "│   "
		for strings.HasPrefix(workLine, "│   ") {
			workLine = workLine[4:]
		}
		workLine = strings.TrimLeft(workLine, " \t")

		var content string
		isDir := false

		if strings.HasPrefix(workLine, "├── ") {
			content = workLine[4:]
		} else if strings.HasPrefix(workLine, "└── ") {
			content = workLine[4:]
		} else {
			return fmt.Errorf("line %d invalid: %q", i+1, originalLine)
		}

		if strings.HasSuffix(content, "/") {
			isDir = true
			content = strings.TrimSuffix(content, "/")
		}

		if !isValidFileName(content) {
			return fmt.Errorf("bad name: %q", content)
		}

		// Recompute depth on ORIGINAL (but normalized) line
		depthLine := normalizeTreeChars(originalLine)
		depth := 0
		for strings.HasPrefix(depthLine, "│   ") {
			depth++
			depthLine = depthLine[4:]
		}

		if len(currentPath) > 0 {
			if depth >= len(currentPath) {
				depth = len(currentPath) - 1
			}
		} else {
			depth = 0
		}

		currentPath = currentPath[:depth+1]

		fullPath := filepath.Join(append(currentPath, content)...)

		if isDir {
			if err := os.MkdirAll(fullPath, 0755); err != nil {
				return err
			}
			currentPath = append(currentPath, content)
		} else {
			dir := filepath.Dir(fullPath)
			if err := os.MkdirAll(dir, 0755); err != nil {
				return err
			}
			f, err := os.Create(fullPath)
			if err != nil {
				return err
			}
			f.Close()
		}
	}

	return nil
}

func isValidTree(lines []string) bool {
	if len(lines) == 0 {
		return false
	}
	nonEmpty := 0
	for _, line := range lines {
		l := normalizeTreeChars(line)
		trimmed := strings.TrimSpace(l)
		if trimmed == "" {
			continue
		}
		nonEmpty++
		for strings.HasPrefix(l, "│   ") {
			l = l[4:]
		}
		l = strings.TrimLeft(l, " \t")
		if strings.HasPrefix(l, "├── ") || strings.HasPrefix(l, "└── ") {
			return true
		}
	}
	return false
}

func readInput() ([]string, string, error) {
	if len(os.Args) > 1 {
		content, err := os.ReadFile(os.Args[1])
		if err != nil {
			return nil, "", err
		}
		contentStr := normalizeTreeChars(string(content))
		return strings.Split(contentStr, "\n"), "file", nil
	}

	content, err := clipboard.ReadAll()
	if err != nil {
		return nil, "", fmt.Errorf("clipboard error: %v", err)
	}
	if content == "" {
		return nil, "", fmt.Errorf("clipboard is empty")
	}
	content = normalizeTreeChars(content)
	return strings.Split(content, "\n"), "clipboard", nil
}

func main() {
	lines, source, err := readInput()
	if err != nil {
		fmt.Fprintf(os.Stderr, "Input error: %v\n", err)
		os.Exit(1)
	}

	fmt.Printf("Read from %s (%d lines)\n", source, len(lines))

	if !isValidTree(lines) {
		fmt.Fprintln(os.Stderr, "❌ Not a valid tree structure.")
		os.Exit(1)
	}

	fmt.Println("✅ Creating...")

	if err := createStructure(lines); err != nil {
		fmt.Fprintf(os.Stderr, "❌ %v\n", err)
		os.Exit(1)
	}

	fmt.Println("✅ Done!")
}